<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:id="@+id/ville_list_layout"
>

    <ImageView
            android:layout_width="106dp"
            android:layout_height="133dp"
            android:id="@+id/villeImage"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
    />
    <TextView
            android:text="nomVille"
            android:layout_width="139dp"
            android:layout_height="wrap_content"
            android:id="@+id/nomVille"
            android:textSize="24sp"
            android:textColor="#000000"
            app:layout_constraintTop_toTopOf="@+id/villeImage"
            app:layout_constraintBottom_toBottomOf="@+id/villeImage"
            app:layout_constraintStart_toEndOf="@+id/villeImage" android:layout_marginStart="36dp"
            app:layout_constraintVertical_bias="0.25"/>
    <TextView
            android:text="nbTourist"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/nbTourist"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/nomVille" app:layout_constraintStart_toEndOf="@+id/villeImage"
            android:layout_marginStart="36dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>